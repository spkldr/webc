# set PATH so it includes user's private bin if it exists
if ( [ h$HOME != 'h' ] && [ -d "$HOME/bin" ] ) ; then
    PATH="$HOME/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin"
fi

